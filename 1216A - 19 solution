#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long n,c=0;
    cin>>n;
    string s;
    cin>>s;
    for(long long i=0;i<n;i+=2){
        if(s[i]==s[i+1])
        {
            c++;
            if(s[i]=='a')
            s[i]='b';
            else s[i]='a';
        }
    }
    cout<<c<<endl<<s;
}
